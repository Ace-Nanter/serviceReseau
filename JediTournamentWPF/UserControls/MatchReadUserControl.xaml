<UserControl x:Class="JediTournamentWPF.UserControls.MatchReadUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JediTournamentWPF.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    <Grid>
        <DockPanel LastChildFill="True">
            <TextBlock x:Name="matchDescriptor" Height="57" TextWrapping="Wrap" Text="{Binding Descriptor}" DockPanel.Dock="Top" Width="597" Foreground="White" HorizontalAlignment="Center"/>
            <StackPanel Height="175" VerticalAlignment="Top" Width="600" Orientation="Horizontal" HorizontalAlignment="Center">
                <local:JediReadUserControl Width="270"/>
                <TextBlock x:Name="vs" Text="V.S." Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,114,0,113" Width="60"/>
                <local:JediReadUserControl Width="270"/>
                <local:StadeUserControl Width="100"/>
            </StackPanel>
            <local:StadeReadUserControl Height="96" VerticalAlignment="Top" DockPanel.Dock="Bottom" Margin="0,0,-264,0"/>
        </DockPanel>

    </Grid>
</UserControl>
