<UserControl x:Class="JediTournamentWPF.UserControls.MatchReadUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JediTournamentWPF.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    <Grid>
        <DockPanel LastChildFill="True">
            <TextBlock x:Name="matchDescriptor" Height="57" TextWrapping="Wrap" Text="{Binding Descriptor}" DockPanel.Dock="Top" Width="597" Foreground="White" HorizontalAlignment="Center"/>
            <local:StadeReadUserControl Height="49" DockPanel.Dock="Bottom" Margin="10,194,10,0"/>
            <StackPanel Height="175" VerticalAlignment="Top" Width="600" Orientation="Horizontal" HorizontalAlignment="Center">
                <local:JediReadUserControl Width="252" DataContext="{Binding SelectedJedi}"/>
                <TextBlock x:Name="vs" Text="V.S." Foreground="White" HorizontalAlignment="Center" Width="60" FontSize="26.667"/>
                <local:JediReadUserControl Width="261" DataContext="{Binding SelectedSith}"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>
