<UserControl x:Class="JediTournamentWPF.UserControls.JediReadUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JediTournamentWPF.UserControls"
             mc:Ignorable="d" 
             >
    <Grid>
        <Image x:Name="image1" HorizontalAlignment="Left" Height="126" Margin="89,10,0,0" VerticalAlignment="Top" Width="138" Source="{Binding Source}"/>
        <Label x:Name="label"
               Content="Nom :"
               HorizontalAlignment="Left" VerticalAlignment="Top"
               Foreground="White"/>
        <TextBox x:Name="textBox"
                 HorizontalAlignment="Left" VerticalAlignment="Top"
                 TextWrapping="Wrap"
                 Text="{Binding Path=Nom, Mode=OneWay}"
                 IsEnabled="False"
                 Margin="60,0,0,0"/>
    </Grid>
</UserControl>
