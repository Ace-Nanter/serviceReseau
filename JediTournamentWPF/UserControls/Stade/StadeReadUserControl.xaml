<UserControl x:Class="JediTournamentWPF.UserControls.StadeReadUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JediTournamentWPF.UserControls"
             mc:Ignorable="d"
             >
    <Canvas
            Width="200"
            Height="125"
            >
        <Image x:Name="defaultPic"
                Source="../../Resources/no-stade.jpg"
                Width="200"
                Height="125"
                />
        <Label x:Name="label"
               Content="{Binding Planete}"
               Height="25"
               Canvas.Left="0" Canvas.Top="100"
               Foreground="White"
               >
            <Label.Background>
                <SolidColorBrush Color="Black" Opacity="0.5"/>
            </Label.Background>
        </Label>
    </Canvas>
</UserControl>
