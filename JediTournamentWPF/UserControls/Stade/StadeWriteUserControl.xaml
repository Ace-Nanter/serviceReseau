<UserControl x:Class="JediTournamentWPF.UserControls.StadeWriteUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JediTournamentWPF.UserControls"
             mc:Ignorable="d" 
             >
    <Grid Visibility="{Binding Path=., Converter={StaticResource NullToVisibility}}">
        <Label x:Name="label"
               Content="Planete : "
               HorizontalAlignment="Left"
               Margin="10,10,0,0"
               VerticalAlignment="Top"
               Width="65"
               Foreground="White"/>
        <TextBox x:Name="textBox"
                 HorizontalAlignment="Left"
                 Height="23" Margin="128,14,0,0"
                 TextWrapping="Wrap"
                 Text="{Binding Path=Planete, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Top" Width="119"/>

        <Label x:Name="label1" Content="Nombre de places :" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.303,0.404" Foreground="White"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="23" Margin="128,53,0,0" TextWrapping="Wrap" Text="{Binding NbPlaces }" VerticalAlignment="Top" Width="49"/>

        <Label x:Name="label2" Content="Caracteristiques :"
               HorizontalAlignment="Left" Margin="10,94,0,0" VerticalAlignment="Top"
               Foreground="White"/>
        <local:CaracteristiquesWriteUserControl x:Name="CaracsUC"
                                   DataContext="{Binding Caracteristiques}" Margin="32,125,-114,-125"/>

    </Grid>
</UserControl>
