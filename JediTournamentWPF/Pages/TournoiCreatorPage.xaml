<Page x:Class="JediTournamentWPF.Pages.NewTournoiPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JediTournamentWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="TournoiCreator" Width="Auto" Height="Auto"  Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="83*"/>
            <RowDefinition Height="117*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="title" Grid.Row="0" Grid.ColumnSpan="2" Foreground="white" FontSize="24" Margin="0,5,0,0" HorizontalAlignment="Center">Créer un nouveau tournoi</Label>
        <ListView  
            ItemsSource="{Binding Matchs}" 
            SelectedItem="{Binding SelectedItem}"
            Grid.Row="1" 
            Margin="0,5" Grid.RowSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Matchs" DisplayMemberBinding="{Binding Descriptor}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <!-- A ajouter quand ce sera prêt
        <my:MatchUserControl x:Name="MatchEditor"></my:MatchUserControl>
        -->
        <Button Name="Add" 
                Command="{Binding Path=AddCommand}" 
                Grid.Row="3" Grid.Column="1">Créer le tournoi</Button>
        
        
        <Button Name="Cancel" Grid.Row="3" Click="cancelButton_Click">Cancel</Button>
    </Grid>
</Page>
